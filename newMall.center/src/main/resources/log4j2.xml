        </RollingFile>

    </appenders>
    <!--然后定义logger，只有定义了logger并引入的appender，appender才会生效-->
    <loggers>
        <!--建立一个默认的root的logger-->
        <root level="info">
            <appender-ref ref="Console"/>
        </root>

        <!-- 框架运行中涉及到的日志 -->
        <logger name="com.br.rpc" additivity="false">
            <appender-ref ref="rpc-info"/>
            <appender-ref ref="rpc-debug"/>
            <appender-ref ref="rpc-warn"/>
            <appender-ref ref="rpc-error"/>
            <appenderRef ref="Console"/>
            <!--这段上正式的时候需要去掉 -->
        </logger>

        <logger name="com.br.newMall" additivity="false">
            <appender-ref ref="newMall-info"/>
            <appender-ref ref="newMall-error"/>
            <appender-ref ref="newMall-warn"/>
            <appenderRef ref="Console"/>
            <!--这段上正式的时候需要去掉 -->
        </logger>

        <logger name="com.br.rpc.common.log" additivity="false">
            <appender-ref ref="rpc-trace-info"/>
            <appenderRef ref="Console"/>
            <!--这段上正式的时候需要去掉 -->
        </logger>

        <logger name="org.apache.thrift" additivity="false">
            <appender-ref ref="thrift-warn"/>
            <appender-ref ref="thrift-error"/>
            <appenderRef ref="Console"/>
            <!--这段上正式的时候需要去掉 -->
